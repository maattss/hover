{
  "expo": {
    "name": "Hover",
    "slug": "hover",
    "description": "Hover description",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "hover",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#121212'",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#121212"
    },
    "updates": {
      "fallbackToCacheTimeout": 30000
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "infoPlist": {
        "UIBackgroundModes": ["location"],
        "NSLocationAlwaysUsage": "YES",
        "NSLocationWhenInUseUsageDescription": "Your location will only be used to determine if you are in a valid geofence.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Your location will only be used to determine if you are in a valid geofence.",
        "NSLocationAlwaysUsageDescription": "Your location will only be used to determine if you are in a valid geofence."
      },
      "bundleIdentifier": "com.hoverapp.hover",
      "buildNumber": "1.0.2"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "useNextNotificationsApi": true,
      "permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION", "ACCESS_BACKGROUND_LOCATION"],
      "package": "com.hoverapp.hover",
      "versionCode": 7
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "notification": {
      "iosDisplayInForeground": true
    }
  }
}
